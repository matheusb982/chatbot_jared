<% publish_to @path do %>
    var id = "<%= @conversation.id %>";
    var chatbox = $("#chatbox_" + id + " .chatboxcontent");
    var sender_id = "<%= @message.user.id %>";
    var reciever_id = $('meta[name=user-id]').attr("content");

    chatbox.append("<%= j render( partial: @message ) %>");
    chatbox.scrollTop(chatbox[0].scrollHeight);

    if (sender_id != reciever_id) {
        chatBox.chatWith(id);
        chatbox.children().last().removeClass("self").addClass("other");
        chatbox.scrollTop(chatbox[0].scrollHeight);
        chatBox.notify();
    }

    var delay=500; setTimeout(function(){

      var id = "<%= @conversation.id %>";
      var chatbox = $("#chatbox_" + id + " .chatboxcontent");
      var sender_id = $('meta[name=user-id]').attr("content");
      var reciever_id = "<%= @message_resp.user.id %>";

      chatbox.append("<%= j render( partial: @message_resp ) %>");
      chatbox.scrollTop(chatbox[0].scrollHeight);

      if (sender_id != reciever_id) {
          chatBox.chatWith(id);
          chatbox.children().last().removeClass("self").addClass("other");
          chatbox.scrollTop(chatbox[0].scrollHeight);
          chatBox.notify();
      }

    },delay);


<% end %>
